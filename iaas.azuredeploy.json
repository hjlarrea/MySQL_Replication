{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkSecurityGroupName": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "addressPrefix": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "publicIpAddressName": {
            "type": "string"
        },
        "publicIpAddressType": {
            "type": "string"
        },
        "publicIpAddressSku": {
            "type": "string"
        },
        "virtualMachineName": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "artifactsLocation": {
            "type": "string"
        },
        "mysqlPassword": {
            "type": "securestring"
        },
        "replicaPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "pipRef": "[resourceId(resourceGroup().name,'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "NSG",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri":"https://raw.githubusercontent.com/hjlarrea/MySQL_Replication/master/nested/nsg.json"
                },
                "parameters": {
                    "networkSecurityGroupName": {
                        "value": "[parameters('networkSecurityGroupName')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "VNet",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "NSG"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri":"https://raw.githubusercontent.com/hjlarrea/MySQL_Replication/master/nested/vnet.json"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "addressPrefix": {
                        "value": "[parameters('addressPrefix')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "networkSecurityGroupName": {
                        "value": "[parameters('networkSecurityGroupName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "PIP",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri":"https://raw.githubusercontent.com/hjlarrea/MySQL_Replication/master/nested/pip.json"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]" 
                    },
                    "publicIpAddressName": {
                        "value": "[parameters('publicIpAddressName')]"
                    },
                    "publicIpAddressType": {
                        "value": "[parameters('publicIpAddressType')]"
                    },
                    "publicIpAddressSku": {
                        "value": "[parameters('publicIpAddressSku')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "LinuxVM",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "PIP",
                "Vnet"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri":"https://raw.githubusercontent.com/hjlarrea/MySQL_Replication/master/nested/linux.json"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "subnetRef": {
                        "value": "[variables('subnetRef')]"
                    },
                    "pipRef": {
                        "value": "[variables('pipRef')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "artifactsLocation": {
                        "value": "[parameters('artifactsLocation')]"
                    },
                    "mysqlPassword": {
                        "value": "[parameters('mysqlPassword')]"
                    },
                    "replicaPassword": {
                        "value": "[parameters('replicaPassword')]"
                    }
                }
            }
        }

    ],
    "outputs": {}
}